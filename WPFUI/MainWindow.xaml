<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="WPF" Height="450" Width="576.865">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36" FontWeight="Bold" Text="WPF Super Demo" Grid.ColumnSpan="2" Margin="0,0,0,10"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="First Name" FontWeight="Bold" />
        <TextBox x:Name="FirstNameText" Grid.Column="2" Grid.Row="2" Width="150" />
        <Button x:Name="submitButton" Content="Submit"  Grid.Column="1" Grid.Row="3" Margin="10,10,21,10" Grid.ColumnSpan="2" Click="submitButton_Click"/>
    </Grid>
</Window>
